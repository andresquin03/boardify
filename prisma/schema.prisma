generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ── Auth.js models ──────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique
  bio           String?
  visibility    ProfileVisibility @default(PUBLIC)

  accounts            Account[]
  sessions            Session[]
  userGames           UserGame[]
  sentFriendships     Friendship[] @relation("FriendshipRequester")
  receivedFriendships Friendship[] @relation("FriendshipAddressee")

  groupMemberships          GroupMember[]
  sentGroupInvitations      GroupInvitation[] @relation("GroupInvitationSent")
  receivedGroupInvitations  GroupInvitation[] @relation("GroupInvitationReceived")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProfileVisibility {
  PUBLIC
  FRIENDS
  PRIVATE
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  REJECTED
  UNFRIENDED
}

model Friendship {
  id          String           @id @default(cuid())
  requesterId String
  addresseeId String
  status      FriendshipStatus @default(PENDING)

  requester User @relation("FriendshipRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  addressee User @relation("FriendshipAddressee", fields: [addresseeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([requesterId, addresseeId])
  @@index([addresseeId, status])
  @@index([requesterId, status])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── App models ──────────────────────────────────────────

model Game {
  id            String  @id @default(cuid())
  title         String
  slug          String  @unique
  description   String?
  minPlayers    Int
  maxPlayers    Int
  minPlaytime   Int
  maxPlaytime   Int
  yearPublished Int?
  difficulty    Float?
  rating        Float?
  designer      String?
  image         String?

  userGames   UserGame[]
  categories  GameCategory[]

  createdAt DateTime @default(now())
}

model Category {
  id   String @id @default(cuid())
  name String @unique
  slug String @unique

  games GameCategory[]

  createdAt DateTime @default(now())
}

model GameCategory {
  id         String @id @default(cuid())
  gameId     String
  categoryId String

  game     Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([gameId, categoryId])
}

model UserGame {
  id         String  @id @default(cuid())
  userId     String
  gameId     String
  isFavorite Boolean @default(false)
  isWishlist Boolean @default(false)
  isOwned    Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@index([userId])
}

// ── Groups ──────────────────────────────────────────────

enum GroupVisibility {
  PUBLIC
  INVITATION
  PRIVATE
}

enum GroupRole {
  ADMIN
  MEMBER
}

enum GroupInvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum GroupIcon {
  DOG
  CAT
  BIRD
  FISH
  BUG
  RABBIT
  SQUIRREL
  TURTLE
  SNAIL
  DICE_1
  DICE_2
  DICE_3
  DICE_4
  DICE_5
  DICE_6
  SWORD
  SWORDS
  SHIELD
  CROWN
  CASTLE
  GEM
  FLAME
  SKULL
  GHOST
  WAND
  SPARKLES
  TROPHY
  TARGET
  PUZZLE
  ROCKET
  COMPASS
  MAP
  ANCHOR
  BOMB
  ZAP
  HEART
  STAR
  MOON
  SUN
}

model Group {
  id          String          @id @default(cuid())
  name        String          @unique
  description String?
  icon        GroupIcon       @default(DICE_1)
  visibility  GroupVisibility @default(INVITATION)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  members     GroupMember[]
  invitations GroupInvitation[]
}

model GroupMember {
  id       String    @id @default(cuid())
  role     GroupRole @default(MEMBER)
  joinedAt DateTime  @default(now())
  userId   String
  groupId  String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model GroupInvitation {
  id        String                @id @default(cuid())
  status    GroupInvitationStatus @default(PENDING)
  groupId   String
  inviterId String
  inviteeId String

  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  inviter User  @relation("GroupInvitationSent", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee User  @relation("GroupInvitationReceived", fields: [inviteeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, inviteeId])
  @@index([inviteeId, status])
}
